doctype html
html(ng-app="app",ng-controller="MainController")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		title UKiUKi web-ui
		link(href="css/mobileangularui/mobile-angular-ui-hover.min.css", rel="stylesheet")
		link(href="css/mobileangularui/mobile-angular-ui-base.min.css", rel="stylesheet")
		//link(href="http://mobileangularui.com/dist/css/mobile-angular-ui-base.min.css", rel="stylesheet")
		link(href="css/mobileangularui/mobile-angular-ui-desktop.min.css", rel="stylesheet")
		link(href="css/semantic.css", rel="stylesheet")
		//link(href="css/ionic.css", rel="stylesheet")
		//link(href="//code.ionicframework.com/nightly/css/ionic.css", rel="stylesheet")
		link(href="css/app.css", rel="stylesheet")
		link(href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css", rel="stylesheet")
	body
		div#spinner.ui.page.active.dimmer
			div.ui.large.loader

		include templates/sidebar.jade
		#main-content.app(
			ng-swipe-right='Ui.turnOn("uiSidebarLeft")',
			ng-swipe-left='Ui.turnOff("uiSidebarLeft")',
			ui-state="loginBlock", ui-default="false"
			)
			include templates/header.jade

			include templates/login.jade

			.app-body
				.app-content
					div.scrollable
						div.scrollable-content
							div(ui-view="browse", ng-show="$state.includes('browse')")
							div(ui-view="whatisukiuki", ng-show="$state.includes('whatisukiuki')")
							div(ui-view="mypage", ng-show="$state.includes('mypage') || $state.includes('user')")

							include templates/browse.jade
							include templates/footer.jade

		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		//script(src='js/semantic.js')
		//script(src='//code.ionicframework.com/nightly/js/ionic.bundle.js')

		script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular.js")
		//script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular-route.js')
		script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.min.js")
		script(src="js/lib.js")
		script(src='js/mobileangularui/mobile-angular-ui.js')
		//script(src='http://mobileangularui.com/dist/js/mobile-angular-ui.min.js')
		script(src='js/mobileangularui/mobile-angular-ui.gestures.min.js')
		//script(src='http://mobileangularui.com/dist/js/mobile-angular-ui.gestures.min.js')

		script(src='js/app.js')
		script(src='js/resource.js')
